<?xml version="1.0" encoding="utf-8"?>
<s:BorderContainer xmlns:fx="http://ns.adobe.com/mxml/2009"
				   xmlns:s="library://ns.adobe.com/flex/spark"
				   xmlns:mx="library://ns.adobe.com/flex/mx"
				   minWidth="500" minHeight="35" top="5" creationComplete="bordercontainer1_creationCompleteHandler(event)">
	
	<fx:Script>
		<![CDATA[
			import com.yzl.model.DataModel;
			
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			[Bindable]
			private var dataModel:DataModel = DataModel.getInstance();
			
			/*
			protected function zoomTools_changeHandler(event:Event):void
			{
				dataModel.mainEditScale = event.target.value;
			}
			*/
			
			protected function bordercontainer1_creationCompleteHandler(event:FlexEvent):void
			{
				dataModel = DataModel.getInstance();
			}
			
			/*
			protected function removePage(event:MouseEvent):void
			{
				FlexGlobals.topLevelApplication.dispatchEvent(new Event("removePage"));
			}
			
			protected function addPage(event:MouseEvent):void
			{
				FlexGlobals.topLevelApplication.dispatchEvent(new Event("addPage"));
			}
			*/
			
			protected function saveTemplate(event:MouseEvent):void
			{
				FlexGlobals.topLevelApplication.dispatchEvent(new Event("saveUserProduct"));
			}
			
			protected function previewProduct(event:MouseEvent):void
			{
				FlexGlobals.topLevelApplication.dispatchEvent(new Event("previewProduct"));
			}
			
		]]>
	</fx:Script>
	
	
	<fx:Declarations>
		<!-- 将非可视元素（例如服务、值对象）放在此处 -->
	</fx:Declarations>
	<s:layout>
		<s:HorizontalLayout gap="20" verticalAlign="middle" paddingLeft="10" />
	</s:layout>
	
	<s:Label x="22" y="10" text="{dataModel.productName_}" fontFamily="经典圆简体" fontSize="14"/>
	<s:Label x="119" y="10" fontFamily="经典圆简体" fontSize="14" fontWeight="normal"
			 text="页数: {dataModel.pageNum}"/>
	
	<s:Group width="100%" height="100%">
		<s:layout>
			<s:HorizontalLayout horizontalAlign="right" gap="10" verticalAlign="middle" paddingRight="10" />
		</s:layout>
		<s:Button label="保存" skinClass="skin.button.BtnSkin" click="saveTemplate(event)"/>
		<!--s:Label text="预览"  useHandCursor="true" buttonMode="true" click="previewProduct(event)" /-->
	</s:Group>	
	
</s:BorderContainer>
