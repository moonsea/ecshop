<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" creationComplete="itemrenderer1_creationCompleteHandler(event)">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" />
	</s:layout>
	<fx:Metadata>
		[Event(name="addFrame",type="com.yzl.events.MyCustomEvent")]
		[Event(name="removeFrame",type="com.yzl.events.MyCustomEvent")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.yzl.events.MyCustomEvent;
			import com.yzl.valueObject.FrameVO;
			
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			protected function bc_mouseOverHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				bc.setStyle("borderWeight",2);
				bc.setStyle("borderColor","0xFD5350");
			}
			
			protected function image2_completeHandler(event:Event):void
			{
				// TODO Auto-generated method stub
				var img:Image = event.target as Image;
				
				if(img.contentHeight >img.contentWidth)
				{
					img1.height= img.contentHeight*(100/img.contentHeight);
					img1.width = img.contentWidth*(100/img.contentHeight);
				}
				else
				{
					img1.width = img.contentWidth*(100/img.contentWidth);
					img1.height= img.contentHeight*(100/img.contentWidth);
				}
			}
			
			protected function bc_mouseOutHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				bc.setStyle("borderWeight",1);
				bc.setStyle("borderColor","0xeeeeee");
			}
			
			protected function check_clickHandle(event:MouseEvent):void
			{
				
				var img:FrameVO = data as FrameVO;
				var e:MyCustomEvent;
				if(event.currentTarget is BorderContainer)
				{
					selection.selected = selection.selected?false:true;
				}
				
				if(selection.selected)
				{
					e = new MyCustomEvent("addFrame",img);
					
				}
				else{
					e = new MyCustomEvent("removeFrame",img);
				}
				FlexGlobals.topLevelApplication.framHeader.dispatchEvent(e);
			}
			
			protected function itemrenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				var img:FrameVO = FlexGlobals.topLevelApplication.framHeader.getDecorateItem(data as FrameVO);
				if(img)
				{
					selection.selected = true;
				}
			}
			
		]]>
	</fx:Script>
	
	
	<s:Group >
		
		<s:BorderContainer top="0" right="0" id="bc" borderColor="0xeeeeee" width="104" height="104" 
						   rollOver="bc_mouseOverHandler(event)" rollOut="bc_mouseOutHandler(event)" click="check_clickHandle(event)" buttonMode="true" useHandCursor="true">
			
			<mx:Image id="img1" source="{String(data.thumbnailURL)}" horizontalCenter="0" verticalCenter="0"
					  complete="image2_completeHandler(event)"/>
			
		</s:BorderContainer>
		<s:CheckBox id="selection" buttonMode="true"  bottom="1" right="1" click="check_clickHandle(event)" />
		
	</s:Group>
</s:ItemRenderer>
