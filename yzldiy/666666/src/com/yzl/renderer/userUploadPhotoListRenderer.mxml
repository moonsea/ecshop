<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" creationComplete="itemrenderer1_creationCompleteHandler(event)">
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" />
	</s:layout>
	<fx:Metadata>
		[Event(name="addUserPhoto",type="com.yzl.events.MyCustomEvent")]
		[Event(name="removeUserPhoto",type="com.yzl.events.MyCustomEvent")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.yzl.events.MyCustomEvent;
			import com.yzl.valueObject.PhotoItem;
			import com.yzl.valueObject.PhotoVO;
			
			import mx.core.FlexGlobals;
			import mx.events.FlexEvent;
			
			protected function bc_mouseOverHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				bc.setStyle("borderWeight",2);
				bc.setStyle("borderColor","0xFD5350");
			}
			
			protected function image2_completeHandler(event:Event):void
			{
				var photoItem:PhotoItem = new PhotoItem(data.photoId,'',null,img1.bitmapData as BitmapData);
				(data as PhotoVO).photoItem = photoItem;
			}
			
			protected function bc_mouseOutHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				bc.setStyle("borderWeight",1);
				bc.setStyle("borderColor","0xeeeeee");
			}
			
			protected function check_clickHandle(event:MouseEvent):void
			{
				
				var img:PhotoVO = data as PhotoVO;
				var e:MyCustomEvent;
				if(event.currentTarget is BorderContainer)
				{
					selection.selected = selection.selected?false:true;
				}
				
				if(selection.selected)
				{
					e = new MyCustomEvent("addUserPhoto",img);
					
				}
				else{
					e = new MyCustomEvent("removeUserPhoto",img);
				}
				FlexGlobals.topLevelApplication.photoHeader.dispatchEvent(e);
			}
			
			protected function itemrenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				var img:PhotoVO = FlexGlobals.topLevelApplication.photoHeader.getmyPhotoArrayListItem(data as PhotoVO);
				if(img)
				{
					selection.selected = true;
				}
			}
		
			
		]]>
	</fx:Script>
	
	
	<s:Group >
		
		<s:BorderContainer top="0" right="0" id="bc" borderColor="0xeeeeee" width="104" height="104" 
						   rollOver="bc_mouseOverHandler(event)" rollOut="bc_mouseOutHandler(event)" click="check_clickHandle(event)" buttonMode="true" useHandCursor="true">
			
			<s:Image id="img1" width="100" height="100" source="{String(data.url.toString())}" horizontalCenter="0" verticalCenter="0"
					  complete="image2_completeHandler(event)"/>
			
		</s:BorderContainer>
		<s:CheckBox id="selection" buttonMode="true"  bottom="1" right="1" click="check_clickHandle(event)" />
		
	</s:Group>
</s:ItemRenderer>
