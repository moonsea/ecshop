<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:mx="library://ns.adobe.com/flex/mx" 
				autoDrawBackground="true" creationComplete="itemrenderer1_creationCompleteHandler(event)">
	<s:layout>
		<s:BasicLayout />
	</s:layout>
	<fx:Metadata>
		[Event(name="removeUpdatePic",type="com.yzl.events.MyCustomEvent")]
	</fx:Metadata>
	<fx:Script>
		<![CDATA[
			import com.yzl.events.MyCustomEvent;
			import com.yzl.valueObject.PhotoItem;
			
			import mx.events.FlexEvent;
			
			private var img1:spark.components.Image;
			protected function image2_clickHandle(event:MouseEvent):void
			{
				var img:PhotoItem = data as PhotoItem;
				var e:MyCustomEvent = new MyCustomEvent("removeUpdatePic",img);
				this.dispatchEvent(e);
			}
			
			protected function itemrenderer1_creationCompleteHandler(event:FlexEvent):void
			{
				img1 = new spark.components.Image();
				img1.source = data.img;
				
				
				img.source = img1.source;
				if(img1.source.height>img1.source.width)
				{
					img.width = img1.source.width * (140/img1.source.height);
					img.height = img1.source.height *(140/img1.source.height);
				}
				else
				{
					img.height = img1.source.height *(140/img1.source.width);
					img.width = img1.source.width * (140/img1.source.width);
					
				}

			}
			
			
			protected function group1_mouseOverHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				del.visible = true;
				bc.setStyle("borderAlpha",1);
			}
			
			protected function group1_mouseOutHandler(event:MouseEvent):void
			{
				// TODO Auto-generated method stub
				del.visible = false;
				bc.setStyle("borderAlpha",0);
			}
			
		]]>
	</fx:Script>
	
	<s:Group width="140" height="140" mouseOver="group1_mouseOverHandler(event)" mouseOut="group1_mouseOutHandler(event)">
		
	<s:BorderContainer id="bc" horizontalCenter="0"
					   verticalCenter="0"
					   dropShadowVisible="true"  backgroundAlpha="0" borderColor="0xFD5350"
					   borderAlpha="0">
		<s:Image id="img" source="assets/nopic.png" width="140" height="140" />
		<mx:Image id="del" 
				  buttonMode="true" 
				  visible="false" 
				  click="image2_clickHandle(event)" 
				  source="assets/x.gif" 
				  top="1" right="1"/>
	</s:BorderContainer>
		
	</s:Group>
</s:ItemRenderer>
